---
import '@/styles/globals.css';
import '@/styles/globalStyles.css';
import PageLoader from '@/components/common/PageLoader';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  ogType?: string;
  canonicalUrl?: string;
  structuredData?: object;
}

const { 
  title, 
  description = "ForzaBuilt delivers premium industrial solutions across transportation, marine, construction, and manufacturing. Expert adhesives, sealants, tapes, and cleaning products for demanding applications.",
  ogImage = "/logos/Forza-Eagle-Logo-Blue-eMail.png",
  ogType = "website",
  canonicalUrl,
  structuredData
} = Astro.props;

const siteUrl = "https://www.forzabuilt.com";
const fullCanonicalUrl = canonicalUrl ? `${siteUrl}${canonicalUrl}` : siteUrl + Astro.url.pathname;

// Handle ogImage URL - if it's already a full URL (blob storage), use it as-is, otherwise prepend siteUrl
const fullOgImageUrl = ogImage?.startsWith('http://') || ogImage?.startsWith('https://') 
  ? ogImage 
  : `${siteUrl}${ogImage}`;

// Default organization structured data
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "ForzaBuilt",
  "url": siteUrl,
  "logo": `${siteUrl}/logos/Forza-Eagle-Logo-Blue.svg`,
  "description": "ForzaBuilt delivers premium industrial adhesives, sealants, tapes, and cleaning solutions for transportation, marine, construction, and manufacturing industries.",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "3211 Nebraska Ave, Suite 300",
    "addressLocality": "Council Bluffs",
    "addressRegion": "IA",
    "postalCode": "51501",
    "addressCountry": "US"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+1-402-731-9300",
    "contactType": "customer service",
    "email": "support@forzabuilt.com",
    "hoursAvailable": {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "opens": "08:00",
      "closes": "16:30",
      "timeZone": "America/Chicago"
    }
  },
  "sameAs": [
    "https://www.linkedin.com/company/forzabuilt"
  ]
};

// WebSite schema for sitelinks search box
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "ForzaBuilt",
  "url": siteUrl,
  "potentialAction": {
    "@type": "SearchAction",
    "target": `${siteUrl}/products?search={search_term_string}`,
    "query-input": "required name=search_term_string"
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/logos/Eagle-favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/logos/Eagle-favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/logos/Eagle-favicon-32x32.png" />
    <link rel="shortcut icon" href="/logos/Eagle-favicon-32x32.png" />
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-8LT5K6RG34"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-8LT5K6RG34');
    </script>
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={fullCanonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullOgImageUrl} />
    <meta property="og:image:secure_url" content={fullOgImageUrl} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="ForzaBuilt Logo" />
    <meta property="og:site_name" content="ForzaBuilt" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={fullCanonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={fullOgImageUrl} />
    <meta property="twitter:image:alt" content="ForzaBuilt Logo" />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="bingbot" content="index, follow" />
    <meta name="author" content="ForzaBuilt" />
    <meta name="publisher" content="ForzaBuilt" />
    
    <!-- Geo Tags for Local SEO -->
    <meta name="geo.region" content="US-IA" />
    <meta name="geo.placename" content="Council Bluffs" />
    <meta name="geo.position" content="41.2619;-95.8608" />
    <meta name="ICBM" content="41.2619, -95.8608" />
    
    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />
    
    <!-- Preload Critical Fonts for LCP -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap" as="style" />
    <link rel="preload" href="https://fonts.gstatic.com/s/poppins/v21/pxiEyp8kv8JHgFVrJJfecg.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- Preload Critical Assets -->
    <link rel="preload" href="/logos/Forza-Eagle-Logo-Blue.svg" as="image" type="image/svg+xml" />
    {Astro.url.pathname === '/' && (
      <link rel="preload" href="/videos/backgrounds/WebOptimized/Eagle Header Video_Optimized.mp4" as="video" type="video/mp4" />
    )}
    
    <meta name="generator" content={Astro.generator} />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    {structuredData && (
      <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    )}
    
    <!-- CRITICAL: Hide content immediately on homepage to prevent flash -->
    {Astro.url.pathname === '/' && (
      <style is:inline>
        /* Hide all body content immediately on homepage */
        body:not(.page-loader-ready) > *:not(#static-page-loader):not(script):not(style) {
          opacity: 0 !important;
          visibility: hidden !important;
        }
        body:not(.page-loader-ready) {
          overflow: hidden !important;
          background: #fff !important;
        }
        /* Static loader styles */
        #static-page-loader {
          position: fixed;
          inset: 0;
          z-index: 9999;
          display: flex;
          align-items: center;
          justify-content: center;
          background: #fff;
        }
        #static-page-loader .loader-content {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 18px;
        }
        #static-page-loader .loader-logo {
          width: 147px;
          height: 147px;
        }
        #static-page-loader .loader-bar {
          width: 147px;
          height: 4px;
          background: #f3f4f6;
          border-radius: 9999px;
          overflow: hidden;
          position: relative;
        }
        #static-page-loader .loader-bar-inner {
          position: absolute;
          inset: 0;
          background: #1B3764;
          animation: loaderSlide 1.2s ease-in-out infinite;
        }
        #static-page-loader .loader-text {
          color: #1B3764;
          font-family: 'Poppins', sans-serif;
          font-size: 12.3px;
          font-weight: 500;
          letter-spacing: 0.4em;
          text-transform: uppercase;
          padding-left: 0.4em;
        }
        @keyframes loaderSlide {
          0% { transform: translateX(-100%); }
          100% { transform: translateX(100%); }
        }
        @media (max-width: 640px) {
          #static-page-loader .loader-logo { width: 98px; height: 98px; }
          #static-page-loader .loader-bar { width: 98px; }
          #static-page-loader .loader-text { font-size: 9.2px; letter-spacing: 0.2em; padding-left: 0.2em; }
        }
      </style>
    )}
  </head>
  <body>
    {/* Static loader that shows instantly on homepage before React hydrates */}
    {Astro.url.pathname === '/' && (
      <div id="static-page-loader">
        <div class="loader-content">
          <img 
            src="/logos/Forza-Eagle-Logo-Blue.svg" 
            alt="Loading..." 
            class="loader-logo"
            fetchpriority="high"
          />
          <div class="loader-bar">
            <div class="loader-bar-inner"></div>
          </div>
          <p class="loader-text">Performance. Elevated.</p>
        </div>
      </div>
    )}
    <PageLoader client:load />
    <slot />
    <Analytics />
    <SpeedInsights />
  </body>
</html>

<style is:global>
  /* Global styles applied to all pages */
  html {
    scroll-behavior: smooth;
  }
</style>

