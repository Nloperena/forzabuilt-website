---
import Layout from '@/layouts/Layout.astro';
import { Providers } from '@/components/common/Providers';
import HeaderWrapper from '@/components/Header/HeaderWrapper';
import FooterV2 from '@/components/FooterV2';
import SealantCalculator from '@/components/tools/SealantCalculator';

const currentPath = Astro.url.pathname;
---

<Layout 
  title="Sealant Calculator - Calculate Coverage | ForzaBuilt"
  description="Calculate how much sealant you need for your project with our interactive calculator."
  canonicalUrl="/tools/sealant-calculator"
>
  <Providers client:load>
    <div class="bg-white min-h-screen flex flex-col relative overflow-x-hidden">
      <HeaderWrapper currentPath={currentPath} />
      
      <main class="flex-1 pt-20 md:pt-24">
        <SealantCalculator />
      </main>
      
      <FooterV2 client:load />
    </div>
  </Providers>
</Layout>
