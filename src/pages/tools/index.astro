---
import Layout from '@/layouts/Layout.astro';
import { Providers } from '@/components/common/Providers';
import HeaderWrapper from '@/components/Header/HeaderWrapper';
import FooterV2 from '@/components/FooterV2';
import { tools } from '@/data/tools';

const currentPath = Astro.url.pathname;
---

<Layout 
  title="Tools - ForzaBuilt Product Selection & Calculators"
  description="Interactive tools to help you select the right adhesive, calculate sealant requirements, and check product compatibility."
  canonicalUrl="/tools"
>
  <Providers client:load>
    <div class="bg-white min-h-screen flex flex-col relative overflow-x-hidden">
      <HeaderWrapper currentPath={currentPath} />
      
      <main class="flex-1 pt-24 md:pt-32">
        <div class="max-w-[1200px] mx-auto px-4 py-12">
          <div class="text-center mb-12">
            <h1 class="text-3xl md:text-5xl font-bold font-poppins text-[#1B3764] mb-4">
              Tools & Resources
            </h1>
            <p class="text-lg md:text-xl text-[#1B3764]/70 font-poppins max-w-2xl mx-auto">
              Interactive tools to help you select the right products for your applications
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {tools.map((tool) => (
              <a 
                href={tool.href}
                class="group bg-white rounded-xl md:rounded-2xl p-6 md:p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-[#F2611D]/20"
              >
                <div class="w-12 h-12 md:w-16 md:h-16 bg-[#1B3764]/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-[#F2611D]/10 transition-colors">
                  <svg class="w-6 h-6 md:w-8 md:h-8 text-[#1B3764] group-hover:text-[#F2611D] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    {tool.icon === 'calculator' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                    )}
                    {tool.icon === 'selector' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                    )}
                    {tool.icon === 'compatibility' && (
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    )}
                  </svg>
                </div>
                <h3 class="text-lg md:text-xl font-bold font-poppins text-[#1B3764] mb-2 group-hover:text-[#F2611D] transition-colors">
                  {tool.title}
                </h3>
                <p class="text-sm md:text-base text-[#1B3764]/70 font-poppins">
                  {tool.description}
                </p>
                <div class="mt-4 flex items-center text-[#F2611D] font-poppins text-sm font-medium">
                  Open Tool
                  <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </div>
      </main>
      
      <FooterV2 />
    </div>
  </Providers>
</Layout>
