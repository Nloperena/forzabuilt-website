---
import Layout from '@/layouts/Layout.astro';
import { Providers } from '@/components/common/Providers';
import HeaderWrapper from '@/components/Header/HeaderWrapper';
import FooterV2 from '@/components/FooterV2';
import ProductSelector from '@/components/tools/ProductSelector';

const currentPath = Astro.url.pathname;
---

<Layout 
  title="Product Selector - Find the Right Adhesive | ForzaBuilt"
  description="Use our interactive product selector to find the perfect adhesive, sealant, or tape for your application."
  canonicalUrl="/tools/product-selector"
>
  <Providers client:load>
    <div class="bg-white min-h-screen flex flex-col relative overflow-x-hidden">
      <HeaderWrapper currentPath={currentPath} />
      
      <main class="flex-1 pt-20 md:pt-24">
        <ProductSelector />
      </main>
      
      <FooterV2 />
    </div>
  </Providers>
</Layout>
