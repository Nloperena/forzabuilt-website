        <!-- Product Image Ticker -->
        <section class="relative -mt-40 md:-mt-56 lg:-mt-64 xl:-mt-68">
          <ProductImageTicker 
            client:load
            items={tickerItems}
            speed={95}
            direction="left"
            className="pt-0 pb-10 md:pt-0 md:pb-16"
          />
        </section>

        <!-- Industries Section -->
        <IndustryCardsSection client:load />

        <!-- Products Section -->
        <ProductCategoriesSection client:load />

        <!-- Product Chemistries Overview -->
        <section class="relative">
          <ChemistryOverviewSectionV7 client:load />
        </section>

        <!-- Approach Section (Customer Success & Slogan Slam Video) -->
