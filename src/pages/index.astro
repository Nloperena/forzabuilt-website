  description="ForzaBuilt delivers premium industrial solutions across transportation, marine, construction, and manufacturing. Expert adhesives, sealants, tapes, and cleaning products for demanding applications."
  canonicalUrl="/"
>
  <div class="relative overflow-x-hidden bg-white">
    <Providers client:only="react">
      <!-- Header (React Island for interactivity) -->
      <HeaderWrapper client:load currentPath={currentPath} />

      <!-- Sticky Hero Video Section with content sliding over -->
