---
import Layout from '@/layouts/Layout.astro';
import { Providers } from '@/components/common/Providers';
import HeaderWrapper from '@/components/Header/HeaderWrapper';
import FooterV2 from '@/components/FooterV2';
import NewsletterSection from '@/components/NewsletterSection';
import BlogIndex from '@/components/BlogIndex';
import blogPostsData from '@/data/blogPosts.json';

const currentPath = Astro.url.pathname;
const blogPosts = blogPostsData;
---

<Layout 
  title="Blog - ForzaBuilt Industrial Insights & News"
  description="Expert insights on industrial adhesives, sealants, and tapes. Industry news, application guides, and technical resources from ForzaBuilt."
  canonicalUrl="/blog"
>
  <Providers client:load>
    <div class="bg-white min-h-screen flex flex-col relative overflow-x-hidden">
      <HeaderWrapper currentPath={currentPath} client:load />
      
      <BlogIndex blogPosts={blogPosts} client:load />

      <!-- Newsletter -->
      <NewsletterSection showHeading={true} client:load />
      
      <FooterV2 />
    </div>
  </Providers>
</Layout>
