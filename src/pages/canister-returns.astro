---
import Layout from '@/layouts/Layout.astro';
import { Providers } from '@/components/common/Providers';
import HeaderWrapper from '@/components/Header/HeaderWrapper';
import FooterV2 from '@/components/FooterV2';
import NewsletterSection from '@/components/NewsletterSection';

const currentPath = Astro.url.pathname;
---

<Layout 
  title="Canister Returns Program - ForzaBuilt"
  description="Learn about ForzaBuilt's canister return program. Return empty canisters for recycling and earn credits toward future purchases."
  canonicalUrl="/canister-returns"
>
  <Providers client:load>
    <div class="bg-white min-h-screen flex flex-col relative overflow-x-hidden">
      <HeaderWrapper currentPath={currentPath} />
      
      <main class="flex-1 pt-24 md:pt-32">
        <div class="max-w-[1200px] mx-auto px-4 py-12">
          <div class="text-center mb-12">
            <h1 class="text-3xl md:text-5xl font-bold font-poppins text-[#1B3764] mb-4">
              Canister Returns Program
            </h1>
            <p class="text-lg md:text-xl text-[#1B3764]/70 font-poppins max-w-2xl mx-auto">
              Sustainability matters. Return your empty canisters and earn credits toward future purchases.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
            <!-- Info Card -->
            <div class="bg-[#f5f7fa] rounded-2xl p-8">
              <h2 class="text-2xl font-bold font-poppins text-[#1B3764] mb-4">
                How It Works
              </h2>
              <ol class="space-y-4 text-[#1B3764]/80 font-poppins">
                <li class="flex gap-3">
                  <span class="flex-shrink-0 w-8 h-8 bg-[#F2611D] text-white rounded-full flex items-center justify-center font-bold">1</span>
                  <span>Collect your empty ForzaBuilt canisters</span>
                </li>
                <li class="flex gap-3">
                  <span class="flex-shrink-0 w-8 h-8 bg-[#F2611D] text-white rounded-full flex items-center justify-center font-bold">2</span>
                  <span>Fill out the return form and schedule pickup</span>
                </li>
                <li class="flex gap-3">
                  <span class="flex-shrink-0 w-8 h-8 bg-[#F2611D] text-white rounded-full flex items-center justify-center font-bold">3</span>
                  <span>Receive credit toward your next order</span>
                </li>
              </ol>
            </div>

            <!-- Download Form -->
            <div class="bg-gradient-to-br from-[#2c476e] to-[#477197] rounded-2xl p-8 text-white">
              <h2 class="text-2xl font-bold font-poppins mb-4">
                Download Return Form
              </h2>
              <p class="text-white/80 font-poppins mb-6">
                Complete the form and include it with your canister shipment.
              </p>
              <a 
                href="/EmptyCanister-ReturnForm 1.pdf"
                target="_blank"
                class="inline-flex items-center px-6 py-3 bg-[#F2611D] text-white font-medium rounded-full hover:bg-[#F2611D]/90 transition-colors font-poppins"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Download PDF
              </a>

              <div class="mt-8">
                <img 
                  src="/EmptyCanister-ReturnForm-mockupimage.webp" 
                  alt="Canister Return Form Preview"
                  class="rounded-lg shadow-lg"
                />
              </div>
            </div>
          </div>

          <!-- Contact CTA -->
          <div class="mt-12 text-center">
            <p class="text-[#1B3764]/70 font-poppins mb-4">
              Questions about the program?
            </p>
            <a 
              href="/contact"
              class="inline-flex items-center px-6 py-3 bg-[#1B3764] text-white font-medium rounded-full hover:bg-[#1B3764]/90 transition-colors font-poppins"
            >
              Contact Us
            </a>
          </div>
        </div>

        <NewsletterSection showHeading={true} />
      </main>
      
      <FooterV2 client:load />
    </div>
  </Providers>
</Layout>
