---
import Layout from '@/layouts/Layout.astro';
import { Providers } from '@/components/common/Providers';
import HeaderWrapper from '@/components/Header/HeaderWrapper';
import FooterV2 from '@/components/FooterV2';
import ChemistryOverviewSectionV7 from '@/components/ChemistryOverviewSectionV7';
import NewsletterSection from '@/components/NewsletterSection';

const currentPath = Astro.url.pathname;
---

<Layout 
  title="Chemistries - ForzaBuilt Adhesive Technologies"
  description="Explore ForzaBuilt's adhesive chemistries including Acrylics, Urethanes, MS Polymers, Silicones, and more. Find the right chemistry for your application."
  canonicalUrl="/chemistries"
>
  <Providers client:load>
    <div class="bg-white min-h-screen flex flex-col relative overflow-x-hidden">
      <HeaderWrapper currentPath={currentPath} />
      
      <main class="flex-1">
        <!-- Hero Section -->
        <section class="relative py-20 md:py-32 bg-gradient-to-b from-[#2c476e] to-[#477197]">
          <div class="max-w-[1400px] mx-auto px-4 text-center">
            <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold font-poppins text-white mb-6">
              Our Chemistries
            </h1>
            <p class="text-lg md:text-xl text-white/80 font-poppins max-w-3xl mx-auto">
              From Acrylics to Urethanes, we engineer adhesive solutions across multiple chemistry platforms to meet your specific application needs.
            </p>
          </div>
        </section>

        <!-- Chemistry Overview -->
        <ChemistryOverviewSectionV7 />

        <!-- Newsletter -->
        <NewsletterSection showHeading={true} />
      </main>
      
      <FooterV2 />
    </div>
  </Providers>
</Layout>
